<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matterless.fr.wcs.matterless.MainActivity"
    android:background="@drawable/gradiantalt"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageViewLogoMainActivity"
        android:layout_width="378dp"
        android:layout_height="147dp"
        app:srcCompat="@drawable/materlesswhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageViewBigButtonMainActivity"
        android:layout_width="189dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/green"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/pulsator"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/pulsator"
        app:layout_constraintTop_toTopOf="@+id/pulsator"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pulsator"
        android:layout_marginBottom="8dp"
        android:translationZ="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <matterless.fr.wcs.matterless.CustomPolice
        android:id="@+id/buttonConfigureEvents"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttonshape"
        android:text="@string/buttonConfigureEventsText"
        android:textColor="@color/white"
        app:font="Graduate-Regular.ttf"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMyProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <matterless.fr.wcs.matterless.CustomPolice
        android:id="@+id/buttonMyProfile"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttonshape"
        android:text="@string/buttonMyProfileText"
        android:textColor="@color/white"
        app:font="Graduate-Regular.ttf"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <pl.bclogic.pulsator4droid.library.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="241dp"
        android:layout_height="251dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoMainActivity"
        app:layout_constraintVertical_bias="0.0"
        app:pulse_color="@color/green"
        app:pulse_count="3"
        app:pulse_duration="3000"
        app:pulse_interpolator="AccelerateDecelerate"
        app:pulse_repeat="0"
        app:pulse_startFromScratch="true">

    </pl.bclogic.pulsator4droid.library.PulsatorLayout>

</android.support.constraint.ConstraintLayout>