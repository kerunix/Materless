<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matterless.fr.wcs.matterless.MainActivity"
    android:background="@drawable/gradiant">

    <ImageView
        android:id="@+id/imageViewLogoMainActivity"
        android:layout_width="378dp"
        android:layout_height="147dp"
        app:srcCompat="@drawable/matterless"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewBigButtonMainActivity"
        android:layout_width="199dp"
        android:layout_height="217dp"
        app:srcCompat="@drawable/green"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoMainActivity"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonConfigureEvents"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:text="@string/buttonConfigureEventsText"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBigButtonMainActivity"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/buttonMyProfile"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:text="@string/buttonMyProfileText"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfigureEvents"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/buttonshape"/>

</android.support.constraint.ConstraintLayout>
