<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matterless.fr.wcs.matterless.MessageSettingActivity"
    android:background="@drawable/gradiantalt"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textViewMyEventsSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewMyEventsSettingsText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextMessageContent"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="@string/editTextMessageContentHintText"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMesageContentDescription"
        app:layout_constraintHorizontal_bias="0.511" />

    <Button
        android:id="@+id/buttonCreateEvent"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonCreateEventText"
        android:textColor="@color/white"
        android:background="@drawable/buttonshape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextMessageContent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewMesageContentDescription"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:text="@string/textViewMesageContentDescriptionText"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonTimePicker" />

    <Button
        android:id="@+id/buttonTimePicker"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_item_shape"
        android:text="@string/buttonTimePickerText"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonChoseChannel" />

    <Button
        android:id="@+id/buttonSelectDay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/buttonSelectDayText"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonChoseChannel"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMesageContentDescription" />

    <EditText
        android:id="@+id/editTextMessageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/editTextNameHint"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMyEventsSettings"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/buttonChoseChannel"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonPickChannel"
        android:textColor="@color/white"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextMessageName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxSignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBpxSignature"
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextMessageContent" />

</android.support.constraint.ConstraintLayout>
