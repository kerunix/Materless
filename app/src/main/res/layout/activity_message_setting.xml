<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matterless.fr.wcs.matterless.MessageSettingActivity"
    android:background="@drawable/gradiantalt"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textViewMyEventsSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewMyEventsSettingsText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="171dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMesageContentDescription" />

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="135dp"
        android:layout_height="68dp"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMyEventsSettings"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMesageContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textClock2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.236"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMyEventsSettings"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMesageContentDescription" />

    <EditText
        android:id="@+id/editTextMessageContent"
        android:layout_width="326dp"
        android:layout_height="122dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/editTextMessageContentHintText"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDeleteEvent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonDeleteEvent"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonDeleteEventText"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"/>

    <TextView
        android:id="@+id/textViewMesageContentDescription"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:text="@string/textViewMesageContentDescriptionText"
        android:textColor="@color/white"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextMessageContent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.511" />

</android.support.constraint.ConstraintLayout>
